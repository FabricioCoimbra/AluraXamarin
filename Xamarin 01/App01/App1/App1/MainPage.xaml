<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <StackLayout>
                <Label Text="Veículos Renault!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                <Label Text="Test Drive" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </StackLayout>
        </Frame>
        
        <StackLayout Padding="30,10,30,10">
            <Label Text="Selecione o veículo de sua preferência :)" FontSize="Title"/>
            <Label Text="Sandero" VerticalOptions="Center"></Label>
            <Label Text="Kwid" VerticalOptions="Center"></Label>
            <Label Text="Stepway :)" VerticalOptions="Center"></Label>
            <Label Text="Sandero RS" VerticalOptions="Center"></Label>
            <Label Text="Sandero Vibe" VerticalOptions="Center"></Label>
            <Label Text="Sandero GT Line" VerticalOptions="Center"></Label>
            <Label Text="Logan" VerticalOptions="Center"></Label>
            <Label Text="Captur" VerticalOptions="Center"></Label>
            <Label Text="Duster" VerticalOptions="Center"></Label>
            <Label Text="Oroch" VerticalOptions="Center"></Label>
            <Label Text="Master" VerticalOptions="Center"></Label>

            <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>
            <Label FontSize="16" Padding="30,24,30,0">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Learn more at "/>
                            <Span Text="https://aka.ms/xamarin-quickstart" FontAttributes="Bold"/>
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
        <StackLayout>
            <Grid>
                <Label Text="Inglês"/>
                <Label Text="Português"/>
                <Label Text="Espanhol"/>
                <Label Text="Italiano"/>
            </Grid>
        </StackLayout>

        <StackLayout>
            <Label Text="Inglês"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Português"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Espanhol"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Italiano"/>
        </StackLayout>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Text="Inglês"/>
            <Label Text="Português"/>
            <Label Text="Espanhol"/>
            <Label Text="Italiano"/>
        </Grid>

    </StackLayout>   

</ContentPage>
